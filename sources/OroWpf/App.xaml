<Application
    x:Class="DustInTheWind.OroWpf.App"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:presentation="clr-namespace:DustInTheWind.OroWpf.Presentation;assembly=DustInTheWind.OroWpf.Presentation">

    <Application.Resources>
        <ResourceDictionary>
            <presentation:QuarterSizeConverter x:Key="QuarterSizeConverter"/>
            <presentation:HalfSizeConverter x:Key="HalfSizeConverter"/>
            <presentation:HalfSizeToPointConverter x:Key="HalfSizeToPointConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DustInTheWind.OroWpf.Presentation;component/Styles/CornerButtonStyles.xaml"/>
                <ResourceDictionary Source="/DustInTheWind.OroWpf.Presentation;component/Styles/ThumbStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
