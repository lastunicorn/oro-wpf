<Application
    x:Class="DustInTheWind.OroWpf.App"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:presentation="clr-namespace:DustInTheWind.OroWpf.Presentation;assembly=DustInTheWind.OroWpf.Presentation"
    xmlns:customControls="clr-namespace:DustInTheWind.OroWpf.Presentation.CustomControls;assembly=DustInTheWind.OroWpf.Presentation.CustomControls">

    <Application.Resources>
        <ResourceDictionary>
            <presentation:QuarterSizeConverter x:Key="QuarterSizeConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DustInTheWind.OroWpf.Presentation.CustomControls;component/Themes/ThumbStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
