<UserControl
    x:Class="DustInTheWind.ClockWpf.ClearClock.Controls.About.AboutControl"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:about="clr-namespace:DustInTheWind.ClockWpf.ClearClock.Controls.About"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance about:AboutViewModel}">

    <DockPanel>

        <StackPanel
            DockPanel.Dock="Top">

            <TextBlock
                Text="Clear Clock"
                FontSize="22"
                FontWeight="Bold"
                HorizontalAlignment="Center" />

            <TextBlock
                x:Name="VersionTextBlock"
                FontSize="14"
                HorizontalAlignment="Center">
                
                <Run Text="Version " />
                <Run Text="{Binding Version}" />
            </TextBlock>

            <Separator Margin="0 10 0 0"/>

        </StackPanel>



        <ScrollViewer
            VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <TextBlock
                    Text="Author"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Center"/>

                <TextBlock
                    Text="Dust in the Wind"
                    FontSize="12"
                    Margin="0 0 0 10"
                    HorizontalAlignment="Center"/>

                <TextBlock
                    Text="Copyright"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Center"/>

                <TextBlock
                    Text="Copyright © Dust in the Wind 2010-2025"
                    FontSize="12"
                    Margin="0 0 0 10"
                    HorizontalAlignment="Center"/>

                <TextBlock
                    Text="License"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Center"/>

                <TextBlock
                    Text="GNU General Public License v3.0"
                    FontSize="12"
                    Margin="0 0 0 10"
                    HorizontalAlignment="Center"/>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>

</UserControl>
