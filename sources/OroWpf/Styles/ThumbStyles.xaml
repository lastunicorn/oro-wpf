<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DustInTheWind.ClockWpf.ClearClock.CustomControls">

    <Style x:Key="ThumbStyle" TargetType="Thumb">
        <Setter Property="Cursor" Value="SizeNWSE" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Padding" Value="10" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Viewbox
                        x:Name="PART_Container"
                        Opacity="0.5">

                        <Grid
                            Width="100"
                            Height="100">

                            <!-- Background -->
                            <Path
                                x:Name="PART_BackgroundPath"
							    Data="M 0,1 A 2,2 0 0 0 1,0 L 1,1 Z"
							    Fill="#909090"
							    Stroke="#909090"
							    StrokeThickness="10"
							    StrokeLineJoin="Round"
							    Stretch="Fill"
							    HorizontalAlignment="Stretch"
							    VerticalAlignment="Stretch"/>

                            <!-- Three Lines -->
                            <Path
							    Data="M 0,20 L 20,0 M 8,20 L 20,8 M 16,20 L 20,16"
							    Stroke="WhiteSmoke"
							    StrokeThickness="2"
							    StrokeStartLineCap="Round"
							    StrokeEndLineCap="Round"
							    HorizontalAlignment="Right"
							    VerticalAlignment="Bottom"
							    Margin="{TemplateBinding Padding}"
							    IsHitTestVisible="False"/>
                        </Grid>
                    </Viewbox>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Container" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
