<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:DustInTheWind.OroWpf.Presentation.CustomControls">

    <Style TargetType="{x:Type customControls:CornerThumb}">
        <Setter Property="Cursor" Value="SizeNWSE" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
        <Setter Property="Background" Value="#909090" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customControls:CornerThumb}">
                    <Viewbox
                        x:Name="PART_Container"
                        Opacity="0.5">

                        <Grid
                            Width="100"
                            Height="100">

                            <!-- Background -->
                            <Path
                                x:Name="PART_BackgroundPath"
							    Data="{TemplateBinding Geometry}"
							    Fill="{TemplateBinding Background}"
							    StrokeLineJoin="Round"
							    Stretch="Fill"
							    HorizontalAlignment="Stretch"
							    VerticalAlignment="Stretch"/>

                            <!-- Three Lines -->
                            <Path
							    Data="M 0,20 L 20,0 M 8,20 L 20,8 M 16,20 L 20,16"
							    Stroke="{TemplateBinding Foreground}"
							    StrokeThickness="2"
							    StrokeStartLineCap="Round"
							    StrokeEndLineCap="Round"
							    HorizontalAlignment="Right"
							    VerticalAlignment="Bottom"
							    Margin="{TemplateBinding Padding}"
							    IsHitTestVisible="False"/>
                        </Grid>
                    </Viewbox>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Container" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
