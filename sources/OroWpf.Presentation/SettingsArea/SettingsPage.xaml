<pageModel:RoundPage
    x:Class="DustInTheWind.OroWpf.Presentation.SettingsArea.SettingsPage"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsArea="clr-namespace:DustInTheWind.OroWpf.Presentation.SettingsArea"
    xmlns:pageModel="clr-namespace:DustInTheWind.OroWpf.Infrastructure.PageModel;assembly=DustInTheWind.OroWpf.Infrastructure.PageModel"
    
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance settingsArea:SettingsPageModel}"
    CloseCommand="{Binding SettingsCloseCommand}"
    Title="{Binding Title, Mode=OneWay}"
    Subtitle="{Binding Subtitle, Mode=OneWay}">

    <Border
        Background="WhiteSmoke"
        Padding="0 8 0 14">

        <TabControl
            BorderThickness="0"
            BorderBrush="LightGray"
            Background="WhiteSmoke"
            Padding="0 10 0 0">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="LightGray" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem
                Header="Templates">

                <settingsArea:TemplatesControl
                    DataContext="{Binding TemplatesViewModel, Mode=OneWay}"/>

            </TabItem>

            <TabItem
                Header="Settings">

                <settingsArea:SettingsControl
                    DataContext="{Binding SettingsViewModel, Mode=OneWay}"/>

            </TabItem>

            <TabItem
                Header="About">

                <settingsArea:AboutControl
                    DataContext="{Binding AboutViewModel, Mode=OneWay}"/>

            </TabItem>

        </TabControl>

    </Border>

</pageModel:RoundPage>
