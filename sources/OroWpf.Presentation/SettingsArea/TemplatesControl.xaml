<UserControl 
    x:Class="DustInTheWind.OroWpf.Presentation.SettingsArea.TemplatesControl"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsArea="clr-namespace:DustInTheWind.OroWpf.Presentation.SettingsArea"
    xmlns:clockwpf="clr-namespace:DustInTheWind.ClockWpf;assembly=DustInTheWind.ClockWpf"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance settingsArea:TemplatesViewModel}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" MinWidth="50" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" MinWidth="50" />
        </Grid.ColumnDefinitions>

        <ListBox
            Grid.Column="0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding TemplateTypes}"
            SelectedItem="{Binding SelectedTemplateType}" />

        <GridSplitter
            Grid.Column="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch" />

        <clockwpf:AnalogClock
            Grid.Column="2"
            x:Name="analogClock1"
            ClockTemplate="{Binding SelectedTemplate}"
            Movement="{Binding ClockMovement}"
            Margin="8 0 0 0"
            RotationDirection="{Binding ClockDirection}"/>

    </Grid>

</UserControl>
