<UserControl 
    x:Class="DustInTheWind.OroWpf.Presentation.SettingsArea.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsArea="clr-namespace:DustInTheWind.OroWpf.Presentation.SettingsArea"
    xmlns:dataConvertors="clr-namespace:DustInTheWind.OroWpf.Presentation.DataConvertors"
    xmlns:shapes="clr-namespace:DustInTheWind.ClockWpf.Shapes;assembly=DustInTheWind.ClockWpf"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance settingsArea:SettingsViewModel}">

    <UserControl.Resources>
        <dataConvertors:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </UserControl.Resources>

    <Grid VerticalAlignment="Top">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Vertical">

            <Border
                Padding="10 2"
                Background="#e0e0e0">

                <TextBlock
                    Text="General"
                    FontSize="14"
                    FontWeight="DemiBold" />
            </Border>

            <CheckBox
                IsChecked="{Binding KeepOnTop}"
                Content="Keep on top"
                Margin="0 8 0 0"/>

        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Orientation="Vertical"
            Margin="0 10 0 0">

            <Border
                Padding="10 2"
                Background="#e0e0e0">

                <TextBlock
                    Text="Clock Direction"
                    FontSize="14"
                    FontWeight="DemiBold" />

            </Border>

            <StackPanel 
                Orientation="Vertical"
                Margin="0 8 0 0">

                <RadioButton 
                    Content="Clockwise"
                    IsChecked="{Binding ClockDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static shapes:RotationDirection.Clockwise}}"
                    Margin="0 0 0 8"
                    VerticalAlignment="Center"/>

                <RadioButton 
                    Content="Counterclockwise"
                    IsChecked="{Binding ClockDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static shapes:RotationDirection.Counterclockwise}}"
                    VerticalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Orientation="Vertical"
            Margin="0 10 0 0">

            <Border
                Padding="10 2"
                Background="#e0e0e0">

                <TextBlock
                    Text="Refresh Rate (times per second)"
                    FontSize="14"
                    FontWeight="DemiBold"/>

            </Border>

            <TextBox
                Text="{Binding RefreshRate, UpdateSourceTrigger=PropertyChanged}"
                Margin="0 8 0 0"
                VerticalAlignment="Center"/>

        </StackPanel>

    </Grid>

</UserControl>
